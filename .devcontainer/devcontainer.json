{
  "customizations": {
    "vscode": {
      "extensions": [
        "hverlin.mise-vscode",
        "DavidAnson.vscode-markdownlint",
        "tamasfe.even-better-toml",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "HashiCorp.HCL",
        "samuelcolvin.jinjahtml",
        "SanjulaGanepola.github-local-actions"
      ]
    }
  },
  "features": {
    "ghcr.io/skriptfabrik/devcontainer-features/infisical-cli:1": {},
    "ghcr.io/tailscale/codespace/tailscale": {}
  },
  "image": "mcr.microsoft.com/devcontainers/python:3.13",
  "mounts": [
    "source=mise-data-volume,target=/mnt/mise-data,type=volume"
  ],
  "postCreateCommand": {
    "mise": ".devcontainer/setup-mise.sh",
    "tailscale": ".devcontainer/tailscaled-auth-setup.sh",
    "ping": "sudo apt-get update && sudo apt-get install -y iputils-ping"
  },
  "runArgs": [
    "--device=/dev/net/tun",
    "--cap-add=NET_ADMIN",
    "--cap-add=MKNOD"
  ]
}
